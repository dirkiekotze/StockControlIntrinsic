<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="intrinsic_plant_equipment.plantequipment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/header_icon"
        android:label="@string/app_name"
        android:logo="@drawable/header_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VehicleAndChecklistSelect"
            android:label="Intrinsic Stock Control: Vehicle Audit"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".AuditItems"
            android:screenOrientation="portrait"
            android:label="Intrinsic Stock Control: Audit Items" />
       <activity
            android:name=".Scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddItem"
            android:label="@string/title_activity_add_item"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditItem"
            android:screenOrientation="portrait" >

